<mvc:View controllerName="ns.HelloWorld.controller.Master" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                    
                    	<Label text="{i18n>name}" labelFor="inputText" />
                    <Input
                        id="inputText"
                        placeholder="{i18n>placeholder}"
                        class="sapUiSmallMarginBottom" 
                        value="{json>/name}"
                        />
                    
                    <Button text="{i18n>buttontext}" press="onPress" />
                    
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
