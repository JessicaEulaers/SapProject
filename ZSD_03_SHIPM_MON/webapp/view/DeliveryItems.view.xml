<mvc:View
	controllerName="be.ap.ZSD_03_SHIPM_MON.controller.DelieveryItems"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">

	<semantic:SemanticPage
		id="deliveryItemsPage"
		busy="{deliveryItemsView>/busy}"
		busyIndicatorDelay="{deliveryItemsView>/delay}">
		<semantic:titleHeading>
			<Title
				text="Delievery: "
				level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
		</semantic:headerContent>
		<semantic:content>
			<Table
				id="lineItemsList"
				width="auto"
				items="{DeliveryItemSet}"
				updateFinished=".onListUpdateFinished"
				noDataText="{i18n>DeliveryItemsLineItemTableNoDataText}"
				busyIndicatorDelay="{deliveryItemsView>/lineItemTableDelay}">
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{deliveryItemsView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>ShipmentNum}"/>
					</Column>
					<Column>
						<Text text="{i18n>DeliveryNum}"/>
					</Column>
                    <Column>
						<Text text="{i18n>ShippintPoint}"/>
					</Column>
                    <Column>
						<Text text="{i18n>Plant}"/>
					</Column>
                    <Column>
						<Text text="{i18n>Count}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
                                                                
								title="{Tknum}"                                                              
								/>
                                <ObjectIdentifier
								title="{Vbeln}"
								/>
                                <ObjectIdentifier
								title="{Vstel}"
								/>
                                <ObjectIdentifier
								title="{Werks}"
								/>
                                <ObjectIdentifier
								title="{Count}"
								/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press=".onSendEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:closeAction>
			<semantic:CloseAction
					id="closeColumn"
					press=".onCloseDeliveryItemsPress"/>
		</semantic:closeAction>

		<semantic:fullScreenAction>
			<semantic:FullScreenAction
					id="enterFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
					id="exitFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>

	</semantic:SemanticPage>

</mvc:View>