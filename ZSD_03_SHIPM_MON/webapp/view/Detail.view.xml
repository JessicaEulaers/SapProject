<mvc:View
	controllerName="be.ap.ZSD_03_SHIPM_MON.controller.Detail"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">

	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title
				text="Shipment number: {IvTknum}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<ObjectAttribute text="Planning point: {IvTplst}. "/>

            <ObjectAttribute text="Cointainer ID: {IsHeader/Signi}. "/>
		</semantic:headerContent>
		<semantic:content>
			<Table
				id="lineItemsList"
				width="auto"
				items="{ToDeliveries}"
				updateFinished=".onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}">
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{detailView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>ShipmentNum}"/>
					</Column>
					<Column>
						<Text text="{i18n>DeliveryNum}"/>
					</Column>
                    <Column>
						<Text text="{i18n>ShippintPoint}"/>
					</Column>
                    <Column>
						<Text text="{i18n>Plant}"/>
					</Column>
                    <Column>
						<Text text="{i18n>Count}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active" press="pressOnDelivery">
						<cells>
							<ObjectIdentifier
                                                                
								title="{Tknum}"                                                              
								/>
                                <ObjectIdentifier
								title="{Vbeln}"
								/>
                                <ObjectIdentifier
								title="{Vstel}"
								/>
                                <ObjectIdentifier
								title="{Werks}"
								/>
                                <ObjectIdentifier
								title="{Count}"
								/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->


		<semantic:closeAction>
			<semantic:CloseAction
					id="closeColumn"
					press=".onCloseDetailPress"/>
		</semantic:closeAction>

		<semantic:fullScreenAction>
			<semantic:FullScreenAction
					id="enterFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
					id="exitFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>

	</semantic:SemanticPage>

</mvc:View>